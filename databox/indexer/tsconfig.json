  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es6",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "sourceRoot": "src/",
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
    "node_modules/@alchemy/**/*.ts"
  ]
}
