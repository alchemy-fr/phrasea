{% extends '@EasyAdmin/crud/index.html.twig' %}
{% trans_default_domain ea.i18n.translationDomain %}

{% block head_javascript %}
    {{ parent() }}
    <style>
        .value-code {
            white-space: nowrap;
        }
        .value-code .code {
            max-width: 250px;
            display: inline-block;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            vertical-align: middle;
        }
        .value-secret .code {
            cursor: pointer;
            max-width: unset;
            overflow: visible;
            text-overflow: unset;
        }
        button.copy {
            font-size: 11px;
            background: #FFF;
            border-radius: 5px;
            border: 1px solid #CCC;
            padding: 3px;
        }
    </style>
    <script>
        function copyText(t) {
            const tm = document.createElement("input");
            tm.type = "text";
            tm.value = t;
            document.body.appendChild(tm);
            tm.select();
            document.execCommand("Copy");
            document.body.removeChild(tm);
        }

        $(function () {
            $('.value-code').each(function () {
                var $t = $(this);
                var $c = $(this).find('.code');
                $(this).find('button.copy').on('click', function (e) {
                    e.stopPropagation();
                    var $btn = $(this);
                    var old = $btn.text();
                    $btn.text('Copied!');
                    setTimeout(function () {
                        $btn.text(old);
                    }, 3000);
                    copyText($t.hasClass('value-secret') ? $c.data('raw') : $c.text());
                });
            });
            var secret = '⬤⬤⬤⬤⬤⬤⬤';
            $('.value-secret').each(function () {
                var to = null;
                var $c = $(this).find('.code');
                $c.data('raw', $c.text());
                $c.text(secret);
                $(this).on('click', function () {
                    if ($c.text() === secret) {
                        $c.text($c.data('raw'));
                        to && clearTimeout(to);
                        to = setTimeout(function () {
                            $c.text(secret);
                        }, 5000);
                    } else {
                        $c.text(secret);
                    }
                });
            });
        });
    </script>
{% endblock %}

{% block content_title %}
    {%- apply spaceless -%}
        {% set custom_page_title = ea.crud.customPageTitle('index') %}
        {{ custom_page_title is null
        ? (ea.crud.defaultPageTitle('index')|trans(ea.i18n.translationParameters, 'EasyAdminBundle'))|raw
        : (custom_page_title|trans(ea.i18n.translationParameters))|raw }}
    {%- endapply -%}
    {{ ' ' }}
    <small>({{ paginator.numResults }})</small>
{% endblock %}
