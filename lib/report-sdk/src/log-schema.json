{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://alchemy.fr/log-schema.json#",
  "title": "Phraseanet internal log schema",
  "type": [
    "object"
  ],
  "properties": {
    "action": {
      "type": "string",
      "pattern": "^[a-zA-Z]+([a-zA-Z0-9_]+)*$",
      "maxLength": 50
    },
    "appName": {
      "type": "string",
      "pattern": "^[a-zA-Z]+([a-zA-Z0-9\\-_]+)*$",
      "maxLength": 36
    },
    "appId": {
      "type": "string",
      "maxLength": 36
    },
    "databoxId": {
      "type": "string",
      "maxLength": 36
    },
    "baseId": {
      "type": "string",
      "maxLength": 36
    },
    "item": {
      "type": "string",
      "maxLength": 36
    },
    "user": {
      "type": "string",
      "maxLength": 36
    },
    "payload": {
      "type": "object"
    },
    "eventDate": {
      "type": "object"
    }
  },
  "required": [
    "action",
    "appName",
    "appId",
    "eventDate"
  ],
  "additionalProperties": false
}
